# ===== DATABASE (Docker & Local) =====
# Nome do banco de dados
POSTGRES_DB=educare
# Usuário do banco
POSTGRES_USER=seu_usuario_aqui
# Senha do banco
POSTGRES_PASSWORD=sua_senha_aqui
# Porta exposta para acesso externo (ex: 5433)
POSTGRES_PORT=5433

# ===== BACKEND (Spring Boot) =====
# Porta em que o backend será executado
SPRING_PORT=8080
# URL de conexão (Use 'db' se estiver no Docker ou 'localhost' se rodar nativo)
SPRING_DATASOURCE_URL=jdbc:postgresql://db:5432/educare
SPRING_DATASOURCE_USERNAME=seu_usuario_aqui
SPRING_DATASOURCE_PASSWORD=sua_senha_aqui

# ===== SEGURANÇA (JWT) =====
# Chave secreta para assinatura dos tokens (mínimo 32 caracteres recomendados)
JWT_SECRET=sua_chave_secreta_super_forte_aqui
# Tempo de expiração em milissegundos (ex: 86400000 para 24h)
JWT_EXPIRATION=86400000

# ===== FRONTEND (Vite) =====
# URL da API para o frontend se comunicar
VITE_API_URL=http://localhost:8080
REACT_PORT=3000